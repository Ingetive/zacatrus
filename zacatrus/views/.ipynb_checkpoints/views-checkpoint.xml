<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_only_form_view_zacatrus">
        <field name="name">product.template.only.form.view</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='inventory']" position="inside">
                <group string="Zacatrus" name="zacatrus">
						<field name="x_sku" />
                        <field name="x_box" />
                        <field name="x_deposito"/>
                        <field name="x_discontinued"/>
				</group>
            </xpath>
        </field>
    </record>
</odoo>