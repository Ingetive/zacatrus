<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_box" model="ir.ui.view">
        <field name="name">sale.order.form.box.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="after">
            <field name="x_box_discount_applied" invisible="1"/>
        </xpath>
        <xpath expr="//field[@name='order_line']/form//group//field[@name='discount']" position="after">
            <field name="x_box_discount_applied" readonly="1"/>
        </xpath>
    </field>
    </record>
</odoo>