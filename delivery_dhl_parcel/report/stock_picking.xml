<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="label_etiqueta_template_view">
        <t t-foreach="docs" t-as="picking">
            <t t-translation="off">
                <t t-esc="picking.dhl_parcel_get_label('txt')"/>
            </t>
        </t>
    </template>

    <record id="report_dhl_label" model="ir.actions.report">
        <field name="name">Etiqueta DHL (ZPL)</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-text</field>
        <field name="report_name">delivery_dhl_parcel.label_etiqueta_template_view</field>
        <field name="report_file">delivery_dhl_parcel.label_etiqueta_template_view</field>
        <field name="print_report_name">'Etiqueta DHL - %s' % (object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
