<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.zacatrus_base</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Zacatrus" string="Zacatrus" data-key="zacatrus_base" groups="point_of_sale.group_pos_manager">
                    <h2>Magento</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="magento_url"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="URL del servidor" for="magento_url"/>
                                    <div class="text-muted">
                                        https://zacatrus.es/rest/all/V1/
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="magento_url" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="magento_user"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Usuario" for="magento_user"/>
                                    <div class="text-muted">
                                        auser
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="magento_user" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="magento_password"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Password" for="magento_password"/>
                                    <div class="text-muted">
                                        supersecret
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="magento_password" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="magento_secret"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Secret" for="magento_secret"/>
                                    <div class="text-muted">
                                        supermegachorizoinfinito
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="magento_secret" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="magento_token"
                            title="Si tiene esto puesto, ignora el usuario/pass y otp.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Token" for="magento_token"/>
                                    <div class="text-muted">
                                        Campo Access Token de la integración de Magento
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="magento_token" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Products</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="card_product_id"
                            title="Es el producto que se vende en el pos.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Tarjeta regalo" for="card_product_id"/>
                                    <div class="text-muted">
                                        Tarjezaca
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="card_product_id" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="fichas_product_id"
                            title="Son las fichas que se aplican en el pos.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Fichas" for="fichas_product_id"/>
                                    <div class="text-muted">
                                        Fichas
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="fichas_product_id" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Printers</h2>
                    <div class="row mt16 o_settings_container" name="printnode_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="printnode_key" title="Key">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Printnode KEY" for="printnode_key" />
                                    <div class="text-muted">
                                        ****
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="printnode_key" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="dhl_segovia_printer_id"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Id de la impresora para DHL en Segovia" for="dhl_segovia_printer_id"/>
                                    <div class="text-muted">
                                        71136026
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="dhl_segovia_printer_id" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="dhl_distri_printer_id"
                            title="This tax is applied to any new product created in the catalog.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Id de la impresora para DHL en Distri" for="dhl_distri_printer_id"/>
                                    <div class="text-muted">
                                        71873255
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="dhl_distri_printer_id" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Reonciliation</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="reconcile_one_month_only"
                            title="Para evitar sobre cargas, solo reconcilia lo del primer mes a partir de la fecha indicada en el modelo.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Solo conciliar un mes" for="reconcile_one_month_only"/>
                                    <div class="text-muted">
                                        Para evitar sobre cargas, solo reconcilia lo del primer mes a partir de la fecha indicada en el modelo.
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="reconcile_one_month_only" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Notificaciones</h2>
                    <div class="row mt16 o_settings_container" name="seres_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="notify_user_ids"
                            title="Usuarios a avisar">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Usuarios a avisar" for="notify_user_ids"/>
                                    <div class="text-muted">
                                        Lista de ids separada por comas de los usuarios a los que se avisa en caso de error.
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="notify_user_ids" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="seres_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="error_level"
                            title="Error level">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Error level" for="error_level"/>
                                    <div class="text-muted">
                                        Nivel de error para notificaciones.
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="error_level" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Notification blocker</h2>
                    <div class="row mt16 o_settings_container" name="seres_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="block_partner_ids"
                            title="Partners a bloquear">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Partners a bloquear" for="block_partner_ids"/>
                                    <div class="text-muted">
                                        Lista de ids separada por comas de los partners que no quieren recibir las notificaciones de 'has sido asignado...'
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="block_partner_ids" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>syncer</h2>
                    <div class="row mt16 o_settings_container" name="syncer_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="syncer_active"
                            title="Módulo">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Activo" for="syncer_active"/>
                                    <div class="text-muted">
                                        Modulo activo
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="syncer_active" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="syncer_sync_active"
                            title="Sincronización activa">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Sincronización" for="syncer_sync_active"/>
                                    <div class="text-muted">
                                        Sincronización activa
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="syncer_sync_active" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Slack</h2>
                    <div class="row mt16 o_settings_container" name="syncer_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="slack_token"
                            title="Slack Token">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Token" for="slack_token"/>
                                    <div class="text-muted">
                                        Slack Token
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="slack_token" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Globo</h2>
                    <div class="row mt16 o_settings_container" name="globo_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="globo_api_key"
                            title="API Key">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="API Key" for="globo_api_key"/>
                                    <div class="text-muted">
                                        API Key
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="globo_api_key" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="globo_api_secret"
                            title="API secret">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="API secret" for="globo_api_secret"/>
                                    <div class="text-muted">
                                        API secret
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="globo_api_secret" colspan="4" nolabel="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </xpath>
        </field>
    </record>

    <record id="action_pos_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'zacatrus_base', 'bin_size': False}</field>
    </record>

</odoo>
